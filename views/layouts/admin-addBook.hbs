    <body>

        <!--WINDOW HEADER -->
        <!--It is Divided into 3 sections - the left header, the mid header (under development) , the right header-->
        <div class="window-header">
           
            <div class="left-header" >
                <nav class="nav-left-header">
                    <a class="nav-links" href="http://localhost:5001/admin">
                        <div class="logo">
                            <img src="/styles/Logo & Images/M.S.N.S.png" alt="" class="logo-image">
                        </div>
                    </a>
                </nav>
            </div>
            <div class="mid-header">

            </div>
            <div class="right-header">
                <nav class="nav-right-header">
                    <div class="header-navigation">
                        <a class="nav-links" href="http://localhost:5001/admin">Admin</a>
                    </div>

                    <div class="header-navigation">
                        <a class="nav-links" href="http://localhost:5001/logout">Sign-out</a>
                    </div>
                </nav>
            </div>
        </div>




        <!--SNACKBAR TO INDICATE ADDITION OF BOOK TO THE DATABASE-->
        <div class="add-book-snackbar" id="add-book-snackbar">
            <span>Book Name</span>
            &nbsp;is added to the database.
        </div>

        <div class="add-book-warning-snackbar" id="add-book-warning-snackbar">
            Error:&nbsp;
            <span>Book</span>
            &nbsp;cannot be added to the database.
        </div>




        <!--ADD BOOK FORM TO ADD A BOOK-->

        <div class="admin-addbook">

            <div class="admin-addbook-title">
                Add a Book
            </div>
            
            <form action="" class="admin-addbook-form">
                <div class="admin-addbook-form-inputDiv">
                    <label for="title">Title</label>
                    <input type="text" id="title" placeholder="Title" class="admin-addbook-form-inputDiv-title" required>
                </div>

                <div class="admin-addbook-form-inputDiv">
                    <label for="description">Description</label>
                    <input type="text" id="description" placeholder="Description" class="admin-addbook-form-inputDiv-description" required>                    
                </div>

                <div class="admin-addbook-form-inputDiv">
                    <label for="author">Author</label>
                    <input type="text" id="author" placeholder="Author" class="admin-addbook-form-inputDiv-author" required>                    
                </div>

                <div class="admin-addbook-form-inputDiv">
                    <label for="genre">Genre</label>
                    <input type="text" id="genre" placeholder="Genre" class="admin-addbook-form-inputDiv-genre" required>                      
                </div>

                <div class="admin-addbook-form-inputDiv">
                    <label for="department">Department</label>
                    <input type="text" id="department" placeholder="Department" class="admin-addbook-form-inputDiv-department" required>                       
                </div>

                <div class="admin-addbook-form-inputDiv">
                    <label for="count">Count</label>
                    <input type="number" id="count" placeholder="Count" class="admin-addbook-form-inputDiv-count" required>                      
                </div>


                <div class="admin-addbook-buttons">
                    <button type="reset">Reset</button>
                    <button type="button" id="submit">Submit</button>
                </div>



            </form>
        </div>



       


        

    
